<UserControl 
    x:Class="Bevisuali.UX.Distribution.DistributionInspector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="300" 
    d:DesignWidth="300"
    Initialized="UserControl_Initialized"
>
    <Grid>
        <TextBlock x:Name="xTitle" VerticalAlignment="Top" Margin="10,8,10,0" TextAlignment="Center">Conditional Probability Table</TextBlock>
        <TextBlock x:Name="xVariableName" VerticalAlignment="Top" Margin="10,24,10,0" TextAlignment="Center">Variable Name</TextBlock>
        
        <ScrollViewer 
            x:Name="xScrollViewer" 
            Margin="0,48,0,0"
            HorizontalScrollBarVisibility="Hidden" 
            VerticalScrollBarVisibility="Auto"
            LayoutUpdated="xScrollViewer_LayoutUpdated"
        >
            <StackPanel x:Name="xStack" Margin="24"></StackPanel>
        </ScrollViewer>
        
    </Grid>
</UserControl>
