<UserControl x:Class="Bevisuali.UX.Distribution.DistributionTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:bvo="clr-namespace:Bevisuali.UX.Observation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <bvo:Observation x:Name="xConditionedOn" Margin="6,0,16,8" VariableNamesColor="Gray" />
            
        <Grid>
            <TextBlock>
                <Run x:Name="xNameLetter">V</Run><Run x:Name="xNameSubscript" BaselineAlignment="Subscript" FontSize="10">1</Run>
            </TextBlock>
            <StackPanel 
                x:Name="xMasses"
                Margin="26,0,0,0"
            >
                <TextBlock>{{ Masses }}</TextBlock>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
